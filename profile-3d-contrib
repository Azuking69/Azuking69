# .github/workflows/profile-3d.yml
name: GitHub-Profile-3D-Contrib

on:
  schedule:
    - cron: "0 18 * * *"  # 毎日 03:00 KST 実行（JST -9時間）
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    name: generate-github-profile-3d-contrib

    permissions:
      contents: write  # ← これ超重要！GitHub Pagesにpushできるようにする

    steps:
      - uses: actions/checkout@v2

      - name: Generate 3D Contributions
        uses: yoshi389111/github-profile-3d-contrib@0.6.0
        env:
          GITHUB_TOKEN: ${{ secrets.GH_TOKEN }}
          USERNAME: ${{ github.repository_owner }}
          TIMEZONE: Asia/Seoul

      - name: Commit & Push
        run: |
          git config --global user.name "Azuking69"
          git config --global user.email "azuking69@hotmail.co.jp"
          git add profile-3d-contrib
          git commit -m "generated 3d contribution graph" || echo "No changes to commit"
          git push https://x-access-token:${{ secrets.GH_TOKEN }}@github.com/Azuking69/Azuking69.git main
